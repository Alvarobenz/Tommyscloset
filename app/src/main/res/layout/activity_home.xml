<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/homescreen3"
    tools:context="com.example.tommyscloset.HomeActivity">

    <ImageView
        android:layout_width="295dp"
        android:layout_height="166dp"
        android:layout_gravity="top"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/tclosetlogo" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/mainmenu_button"
        android:minWidth="260dp"
        android:minHeight="80dp"
        android:text="Going out"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorLink="#B86DD8"
        android:textSize="24dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:minWidth="260dp"
        android:minHeight="80dp"
        android:textAllCaps="false"
        android:text="Upload"
        android:background="@drawable/mainmenu_button"
        android:textColor="#FFFFFF"
        android:textColorLink="#B86DD8"
        android:textSize="24dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:minWidth="260dp"
        android:minHeight="80dp"
        android:textAllCaps="false"
        android:text="View all"
        android:background="@drawable/mainmenu_button"
        android:textColor="#FFFFFF"
        android:textColorLink="#B86DD8"
        android:textSize="24dp"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/mainmenu_button"
        android:minWidth="260dp"
        android:minHeight="80dp"
        android:text="Laundry"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorLink="#B86DD8"
        android:textSize="24dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:minWidth="260dp"
        android:minHeight="80dp"
        android:textAllCaps="false"
        android:text="Account"
        android:background="@drawable/mainmenu_button"
        android:textColor="#FFFFFF"
        android:textColorLink="#B86DD8"
        android:textSize="24dp"/>

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mainmenu_logout"
        android:minWidth="100dp"
        android:minHeight="40dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@color/lightAccent"
        android:textColorLink="@color/lightAccent"
        android:textSize="18sp"
        android:translationX="0dp"
        android:translationY="50dp" />


</LinearLayout>
