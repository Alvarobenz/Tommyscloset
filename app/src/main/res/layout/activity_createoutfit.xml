<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#3A3A3A"
    tools:context=".Createoutfit">

    <TextView
        android:id="@+id/itemTypeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:text=" 'Add name &amp; Tags after selecting items' "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="14dp"
        android:textStyle="normal|italic"
        app:layout_constraintBottom_toTopOf="@+id/itemImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.319" />

    <Button
        android:id="@+id/buttonAcc"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:background="#00FFFFFF"
        android:minWidth="260dp"
        android:minHeight="80dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorLink="#B86DD8"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.318" />

    <ImageView
        android:id="@+id/itemAccView"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:minWidth="260dp"
        android:minHeight="80dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.318"
        app:srcCompat="@drawable/selectimg" />

    <Button
        android:id="@+id/buttonBottom"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:background="#00FFFFFF"
        android:minWidth="260dp"
        android:minHeight="80dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorLink="#B86DD8"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAcc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toEndOf="@+id/buttonTop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.524" />

    <Button
        android:id="@+id/buttonShoe"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:background="#00FFFFFF"
        android:minWidth="260dp"
        android:minHeight="80dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorLink="#B86DD8"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316" />

    <ImageView
        android:id="@+id/itemTopView"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:minWidth="260dp"
        android:minHeight="80dp"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonShoe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533"
        app:srcCompat="@drawable/selectimg"
        />

    <ImageView
        android:id="@+id/itemShoeView"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:minWidth="260dp"
        android:minHeight="80dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316"
        app:srcCompat="@drawable/selectimg" />

    <ImageView
        android:id="@+id/itemBottomView"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:minWidth="260dp"
        android:minHeight="80dp"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAcc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toEndOf="@+id/buttonTop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.524"
        app:srcCompat="@drawable/selectimg" />

    <Button
        android:id="@+id/buttonTop"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:background="#00FFFFFF"
        android:minWidth="260dp"
        android:minHeight="80dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorLink="#B86DD8"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonShoe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533"
        />

    <TextView
        android:id="@+id/topTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select top"
        android:textColor="#C014BEF6"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonShoe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemTopView"
        app:layout_constraintVertical_bias="0.319" />

    <TextView
        android:id="@+id/bottomTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select bottom"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#C014BEF6"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAcc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.805"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemBottomView"
        app:layout_constraintVertical_bias="0.272" />

    <TextView
        android:id="@+id/shoeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select shoe"
        android:textColor="#C014BEF6"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemShoeView"
        app:layout_constraintVertical_bias="0.319" />

    <TextView
        android:id="@+id/accTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select accessory"
        android:textColor="#C014BEF6"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemAccView"
        app:layout_constraintVertical_bias="0.319" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="117dp"
        android:layout_height="42dp"
        android:background="@drawable/buttontype1"
        android:minWidth="260dp"
        android:minHeight="80dp"
        android:text="Create"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorLink="#B86DD8"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttontype2"
        android:minWidth="260dp"
        android:minHeight="80dp"
        android:text="Reset"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorLink="#B86DD8"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonNext"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup1"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/outfitNameText"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:background="#A361CFBF"
        android:hint="              Outfit Name"
        android:textStyle="normal|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemShoeView" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"


        android:theme="@style/Theme.MaterialComponents.Light"
        android:visibility="visible"
        app:chipSpacing="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outfitNameText"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible">

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T-Shirt"
            android:textSize="5dp"
            app:chipMinTouchTargetSize="0dp"
            app:chipBackgroundColor="#FFEDB8"
            />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dress"
            app:chipMinTouchTargetSize="0dp"
            app:chipBackgroundColor="#FFEDB8"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oxford button-down"
            app:chipMinTouchTargetSize="0dp"
            app:chipBackgroundColor="#FFEDB8"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dress shirt"
            app:chipMinTouchTargetSize="0dp"
            app:chipBackgroundColor="#FFEDB8"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuban Short Sleeve"
            app:chipMinTouchTargetSize="0dp"
            app:chipBackgroundColor="#FFEDB8"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overshirt"
            app:chipMinTouchTargetSize="0dp"
            app:chipBackgroundColor="#FFEDB8"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flannel"
            app:chipMinTouchTargetSize="0dp"
            app:chipBackgroundColor="#FFEDB8"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout shirt"
            app:chipMinTouchTargetSize="0dp"
            app:chipBackgroundColor="#FFEDB8"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Denim shirt"
            app:chipMinTouchTargetSize="0dp"
            app:chipBackgroundColor="#FFEDB8"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classic short-sleeve"
            app:chipMinTouchTargetSize="0dp"
            app:chipBackgroundColor="#FFEDB8"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout shirt"
            app:chipMinTouchTargetSize="0dp"
            app:chipBackgroundColor="#FFEDB8"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeans"
            app:chipMinTouchTargetSize="0dp"
            app:chipBackgroundColor="#FFEDB8"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bracelet"
            app:chipMinTouchTargetSize="0dp"
            app:chipBackgroundColor="#FFEDB8"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch"
            app:chipMinTouchTargetSize="0dp"
            app:chipBackgroundColor="#FFEDB8"/>


    </com.google.android.material.chip.ChipGroup>


</androidx.constraintlayout.widget.ConstraintLayout>