<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <Button
            android:id="@+id/buttonSelect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="350dp"
            android:background="@drawable/a_plus_png"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="280dp"
            android:minWidth="100dp"
            android:minHeight="80dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <LinearLayout
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />


            <TextView
                android:id="@+id/text_view_Type"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:text="Type: 27"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup1"
            android:layout_width="129dp"
            android:layout_height="63dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="150dp"
            android:fadeScrollbars="true"

            android:minWidth="150dp"
            android:minHeight="0dp"
            android:overScrollMode="ifContentScrolls"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:scaleX="1"
            android:scaleY="1"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="horizontal"
            android:theme="@style/Theme.MaterialComponents.Dialog.FixedSize"
            android:visibility="visible"
            app:chipSpacing="0dp"
            app:chipSpacingHorizontal="0dp"
            >

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:id="@+id/chip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX=".7"
                android:scaleY=".7"
                android:text="T-Shirt"
                android:textAlignment="center"
                android:textSize="20dp"
                app:chipEndPadding="0dp"
                app:chipIconSize="18dp"
                app:chipMinHeight="20dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStartPadding="0dp"
                app:closeIconEndPadding="0dp"
                app:closeIconSize="5dp"
                app:closeIconStartPadding="0dp"
                app:textEndPadding="10dp"
                app:textStartPadding="10dp"
                android:visibility="invisible"/>

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:id="@+id/chip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX=".7"
                android:scaleY=".7"
                android:text="T-Shirt"
                android:textAlignment="center"
                android:textSize="5dp"
                app:chipEndPadding="0dp"
                app:chipIconSize="18dp"
                app:chipMinHeight="20dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStartPadding="0dp"
                app:closeIconEndPadding="0dp"
                app:closeIconSize="5dp"
                app:closeIconStartPadding="0dp"
                app:textEndPadding="10dp"
                app:textStartPadding="10dp"
                android:visibility="invisible"/>

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:id="@+id/chip3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX=".7"
                android:scaleY=".7"
                android:text="T-Shirt"
                android:textAlignment="center"
                android:textSize="5dp"
                app:chipEndPadding="0dp"
                app:chipIconSize="18dp"
                app:chipMinHeight="20dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStartPadding="0dp"
                app:closeIconEndPadding="0dp"
                app:closeIconSize="5dp"
                app:closeIconStartPadding="0dp"
                app:textEndPadding="10dp"
                app:textStartPadding="10dp"
                android:visibility="invisible"/>

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:id="@+id/chip4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX=".7"
                android:scaleY=".7"
                android:text="T-Shirt"
                android:textAlignment="center"
                android:textSize="5dp"
                app:chipEndPadding="0dp"
                app:chipIconSize="18dp"
                app:chipMinHeight="20dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStartPadding="0dp"
                app:closeIconEndPadding="0dp"
                app:closeIconSize="5dp"
                app:closeIconStartPadding="0dp"
                app:textEndPadding="10dp"
                app:textStartPadding="10dp"
                android:visibility="invisible"/>

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:id="@+id/chip5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX=".7"
                android:scaleY=".7"
                android:text="T-Shirt"
                android:textAlignment="center"
                android:textSize="5dp"
                app:chipEndPadding="0dp"
                app:chipIconSize="18dp"
                app:chipMinHeight="20dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStartPadding="0dp"
                app:closeIconEndPadding="0dp"
                app:closeIconSize="5dp"
                app:closeIconStartPadding="0dp"
                app:textEndPadding="10dp"
                app:textStartPadding="10dp"
                android:visibility="invisible"/>

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:id="@+id/chip6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX=".7"
                android:scaleY=".7"
                android:text="T-Shirt"
                android:textAlignment="center"
                android:textSize="5dp"
                app:chipEndPadding="0dp"
                app:chipIconSize="18dp"
                app:chipMinHeight="20dp"
                app:chipMinTouchTargetSize="0dp"
                app:chipStartPadding="0dp"
                app:closeIconEndPadding="0dp"
                app:closeIconSize="5dp"
                app:closeIconStartPadding="0dp"
                app:textEndPadding="10dp"
                app:textStartPadding="10dp"
                android:visibility="invisible"/>

        </com.google.android.material.chip.ChipGroup>

    </androidx.cardview.widget.CardView>

</RelativeLayout>