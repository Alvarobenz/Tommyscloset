<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/griditem1"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".GridItem">

    <TextView
        android:id="@+id/griddata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="171dp"
        android:text="Apple"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:id="@+id/imageViewAccessory"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/griddata"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="216dp"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="26dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/imageViewTop"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/griddata"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-31dp"
        android:layout_marginEnd="214dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/imageViewBottom"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/griddata"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-33dp"
        android:layout_marginEnd="31dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/imageViewShoe"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/griddata"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="212dp"
        android:src="@drawable/logo" />


    <Button
        android:id="@+id/wearBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chipGroup1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="153dp"
        android:text="Wear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="2.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayImageView" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageViewShoe"
        android:layout_alignEnd="@+id/imageViewAccessory"
        android:layout_marginStart="-12dp"
        android:layout_marginTop="500dp"


        android:layout_marginEnd="-16dp"
        android:layout_marginBottom="50dp"
        android:paddingStart="25dp"
        android:paddingEnd="0dp"

        android:theme="@style/Theme.MaterialComponents.Light"
        android:visibility="visible"
        app:chipSpacing="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outfitNameText"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T-Shirt"
            android:textAlignment="center"
            android:textSize="5dp"
            android:visibility="invisible"
            app:chipBackgroundColor="#FFEDB8"
            app:chipMinTouchTargetSize="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dress"
            android:textAlignment="center"
            android:visibility="invisible"
            app:chipBackgroundColor="#FFEDB8"
            app:chipMinTouchTargetSize="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oxford button-down"
            android:textAlignment="center"
            android:visibility="invisible"
            app:chipBackgroundColor="#FFEDB8"
            app:chipMinTouchTargetSize="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip4"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dress shirt"
            android:textAlignment="center"
            android:visibility="invisible"
            app:chipBackgroundColor="#FFEDB8"
            app:chipMinTouchTargetSize="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip5"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuban Short Sleeve"
            android:textAlignment="center"
            android:visibility="invisible"
            app:chipBackgroundColor="#FFEDB8"
            app:chipMinTouchTargetSize="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip6"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overshirt"
            android:textAlignment="center"
            android:visibility="invisible"
            app:chipBackgroundColor="#FFEDB8"
            app:chipMinTouchTargetSize="0dp" />

    </com.google.android.material.chip.ChipGroup>


</RelativeLayout>